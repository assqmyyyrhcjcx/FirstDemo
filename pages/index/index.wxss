/**index.wxss**/

.swiper {
  width: 100%;
  height: 300rpx;
}

.slide-image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.category{
  width: 100%;
  height: 160rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.categoryItem{
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin-left: 10rpx;
  background-color: #FFF;
  text-align: center;
  border-radius: 140rpx;
}

.categoryItem image{
  margin: 0 auto;
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.categoryItem text{
  font-size: 8pt;
  text-align: center;
}

.activity{
  width: 90%;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.activityItem{
  margin: 10rpx;
  width: 300rpx;
  height: 260rpx;
  display: inline-block;
}

.activityItem > image{
  width: 300rpx;
  height: 260rpx;
}

.hotArea{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.hotProduct{
  width: 300rpx;
  height: 400rpx;
  margin: 10rpx;
  background-color: #FFF;
}

.hotProductImg image{
  width: 300rpx;
  height: 300rpx;
}

.hotProductInfo{
  width: 300rpx;
  display: flex;
  flex-direction: column;  
  justify-content: center;
  align-items: center;
}

.hotProductInfo > text{
  font-size: 8pt;
  margin-top: 10rpx;
}