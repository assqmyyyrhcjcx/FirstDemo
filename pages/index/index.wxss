/**index.wxss**/

.swiper {
  width: 100%;
  height: 300rpx;
}

.slide-image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.category{
  width: 100%;
  height: 160rpx;
  margin-top: 40rpx;
}

.categoryItem{
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin-left: 10rpx;
  background-color: #FFF;
  text-align: center;
  border-radius: 140rpx;
}

.categoryItem image{
  margin: 0 auto;
  display: block;
  width: 100rpx;
  height: 100rpx;
}
.categoryItem text{
  font-size: 8pt;
  text-align: center;
}

.activity{
  width: 90%;
  margin-top: 20rpx;
}

.activityItem{
  float: left;
  margin: 10rpx;
  width: 150rpx;
  height: 260rpx;
  background-color: red;
}

.activityItem > image{
  width: 300rpx;
  height: 260rpx;

}